@import 'client/styles/*.import'
@import s(basePath, links)
@import s(basePath, checkbox)
@import s(basePath, selectCustom)
@import s(basePath, dotStyle)

article[data-role='links']
  ul
    inline-list()
    display flex
    justify-content space-between
    >li:nth-child(1)
      cpLinks(brandColor)
    >li:nth-child(2)
      cpLinks(brandInfo)
    >li:nth-child(3)
      cpLinks(brandSuccess)
    >li:nth-child(4)
      cpLinks(brandWarning)
    >li:nth-child(5)
      cpLinks(brandDanger)
    >li:nth-child(6)
      cpLinks(violet)

article[data-role='checkbox']
  figure
    cpCheckbox(bgColor, brandSuccess, brandDanger, brandColor)
    span.checkbox
      width 150px

article[data-role='select']
  figure
    display flex
    cpSelectCustom(bgColor, brandColor)

article[data-role='dot-style']
  figure
    background brandDanger
    cpDotStyle(bgColor)
    text-align center
    ul
    p
      margin-top 0
      color bgColor
    &.fillup
      cpDotStyleFillup(brandColor, bgColor)
    &.scaleup
      cpDotStyleScaleup(brandColor, bgColor)
