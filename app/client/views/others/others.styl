@import 'client/styles/*.import'
@import s(basePath, checkbox)
@import s(basePath, selectCustom)
@import s(basePath, dotStyle)

article[data-role='checkbox']
  figure
    cpCheckbox(bgColor, brandSuccess, brandDanger, brandColor)
    span.checkbox
      width 150px

article[data-role='select']
  figure
    display flex
    cpSelectCustom(bgColor, brandColor)

article[data-role='dot-style']
  figure
    background brandDanger
    cpDotStyle(bgColor)
    text-align center
    ul
    p
      margin-top 0
      color bgColor
    &.fillup
      cpDotStyleFillup(brandColor, bgColor)
    &.scaleup
      cpDotStyleScaleup(brandColor, bgColor)
    &.stroke
      cpDotStyleStroke(brandColor, bgColor)
