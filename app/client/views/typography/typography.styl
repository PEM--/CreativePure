@import 'client/styles/*.import'

article[data-role='links']
  @import s(basePath, links)
  ul
    inline-list()
    display flex
    justify-content space-between
    >li:nth-child(1)
      cpLinks(brandColor)
    >li:nth-child(2)
      cpLinks(brandInfo)
    >li:nth-child(3)
      cpLinks(brandSuccess)
    >li:nth-child(4)
      cpLinks(brandWarning)
    >li:nth-child(5)
      cpLinks(brandDanger)
    >li:nth-child(6)
      cpLinks(violet)

article[data-role='long-shadow']
  @import s(basePath, longShadow)
  figure
    overflow hidden
    .fa-twitter
      color blue
    .fa-youtube
      color red
    .long-shadow
      size 4em
      overflow hidden
      border-radius roundCorner
      text-align center
      display inline-block
      margin 0 2em
      >p, >p::before
        margin .5em 0 0 0
        padding 0
        font-size 1.5em
    .brand
      border roundCorner solid brandColor
      background lighten(brandColor, 40%)
      cpLongShadow('box', lighten(brandColor, 30%), 30, true, true)
      >p, >p::before
        cpLongShadow('text', lighten(brandColor, 20%), 50)
    .grayish
      border roundCorner solid dimgray
      background lighten(dimgray, 40%)
      cpLongShadow('box', lighten(dimgray, 30%), 50, true, true)
      >p, >p::before
        cpLongShadow('text', lighten(dimgray, 20%), 30)

article[data-role='table']
  @import s(basePath, table)
  figure
    table
      cpTable(brandColor, bgColor)
